{
  "name": "attila-somni",
  "description": "Ghost Theme based on Attila",
  "version": "0.2.0",
  "engines": {
    "ghost": ">=5.0.0"
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "src/screenshot-desktop.jpg",
    "mobile": "src/screenshot-mobile.jpg"
  },
  "author": {
    "name": "Peter Amende",
    "email": "hey@peteramende.de",
    "url": "https://peteramende.de"
  },
  "contributors": [
    {
      "name": "somni",
      "email": "me@somni.one",
      "url": "https://somni.one"
    }
  ],
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Personal Blogs"
    ]
  },
  "keywords": [
    "ghost-theme",
    "ghost",
    "theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/somnisomni/attila-somni"
  },
  "scripts": {
    "build": "grunt build",
    "dist": "grunt dist"
  },
  "devDependencies": {
    "@lodder/grunt-postcss": "^3.1.1",
    "autoprefixer": "^10.4.2",
    "grunt": "^1.5.3",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-compress": "^2.0.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify": "^5.0.1",
    "grunt-contrib-watch": "^1.1.0",
    "grunt-sass": "^3.1.0",
    "load-grunt-tasks": "^5.1.0",
    "postcss": "^8.4.18",
    "sass": "^1.56.0"
  },
  "config": {
    "posts_per_page": 8,
    "image_sizes": {
      "s": {
        "width": 320
      },
      "m": {
        "width": 640
      },
      "l": {
        "width": 960
      },
      "xl": {
        "width": 1920
      }
    },
    "card_assets": true,
    "custom": {
      "color_scheme": {
        "type": "select",
        "options": [
          "Light",
          "Dark",
          "System"
        ],
        "default": "System"
      },
      "darkmode_accent_color": {
        "type": "color",
        "default": "#ff6633"
      },
      "footer_custom_text": {
        "type": "text",
        "default": ""
      },
      "mastodon_url": {
        "type": "text",
        "default": ""
      },
      "hide_author_in_homepage": {
        "type": "boolean",
        "default": false,
        "group": "homepage"
      },
      "disqus_shortname": {
        "type": "text",
        "default": "",
        "group": "post"
      },
      "date_format": {
        "type": "select",
        "options": [
          "YYYY/MM/DD",
          "YYYY년 MM월 DD일",
          "DD-MM-YYYY"
        ],
        "default": "YYYY/MM/DD",
        "group": "post"
      },
      "use_highlightjs_background_color_for_code_blocks": {
        "type": "boolean",
        "default": true,
        "group": "post"
      }
    }
  },
  "browserslist": [
    "defaults"
  ]
}
